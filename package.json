{
	"name": "Sync.Theater.Web",
	"version": "0.0.1",
	"description": "Sync.Theater's new web frontend, based off milligram css framework.",
	"homepage": "http://sync.theater",
	"repository": "sync-theater/Sync.Theater.Web",
	"license": "MIT",
	"author": "Alec Chan <alec@alecchan.org>",
	"private": true,
	"engines": {
		"node": ">=4"
	},
	"dependencies": {
		"milligram": "latest"
	},
	"devDependencies": {
		"bower": "^1.8.0",
		"browser-sync": "^2.18.2",
		"ncp": "^2.0.0",
		"npm-run-all": "^3.1.2",
		"onchange": "^3.2.0",
		"rimraf": "^2.5.4",
		"grunt": "~0.4.1",
		"grunt-contrib-cssmin": "^2.2.0",
		"grunt-contrib-htmlmin": "^2.4.0",
		"grunt-contrib-uglify": "~0.2.4",
		"grunt-contrib-watch": "~0.5.3",
		"grunt-newer": "^1.3.0"
	},
	"scripts": {
		"start": "run-s clean build bower && run-p watch serve",
		"clean": "rimraf dist",
		"bower": "ncp bower_components dist/lib",
		"build": "ncp src dist",
		"watch": "onchange src/* -- run-s build",
		"serve": "browser-sync --no-notify start -s dist -f dist",
		"test": "run-s clean build bower",
		"postinstall": "bower i",
		"prestart": "npm i"
	}
}
